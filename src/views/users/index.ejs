<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Gerenciar Users</h1>
  <a href="/users/form" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-plus fa-sm text-white-50"></i> Adicionar</a>
</div>

<% if (users.length == 0) { %>
  <p class='alert alert-warning'>NÃ£o existe nenhum cadastro ainda.</p>
<% } else { %>
  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
  
    <tbody>
  
      <% users.forEach((user) => { %>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <a href="/users/form/<%= user.id %>" class='btn btn-success btn-sm'>
              <i class="fas fa-edit"></i>
              Editar
            </a>

            <a href="/users/delete/<%= user.id %>" class='btn btn-danger btn-sm' onclick="return confirm('Deseja mesmo remover \'<%= user.name %>\'?')">
              <i class="fas fa-trash"></i>
              Remove
            </a>
          </td>
        </tr>
      <% }) %>
          
    </tbody>
  </table>
<% } %>